pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                echo 'Building...'
                sh 'mvn clean'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing...'
                sh 'mvn package'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying...'
                sh 'mvn install'
            }
        }
    }
}
